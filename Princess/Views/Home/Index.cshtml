@model List<Presence>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div

@foreach (var item in Model)
{
    <p>
student id : @item.Student.Id | Attended:
        @item.Attended
    | Student name: @item.Student.Name | Reason: 
        @if (item.ReasonAbsence == null)
        {
            item.ReasonAbsence = "No absence note!";
        }
        else
        {
            @item.ReasonAbsence
        }
        | Class: @item.Lecture.Class.Name
| Teacher : @item.Lecture.Teacher.Name | 
Date of Lecture : @item.Lecture.Date
</p>
}
